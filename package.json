{
  "name": "Shread-Knews",
  "version": "1.0.0",
  "description": "Northcoders News API with Knex/psql",
  "main": "index.js",
  "scripts": {
    "test": "mocha spec",
    "lint": "eslint ./ --fix",
    "pre-commit": "npm t",
    "posttest": "npm run lint",
    "migrate-make": "knex migrate:make",
    "migrate-latest": "knex migrate:latest",
    "migrate-rollback": "knex migrate:rollback",
    "setup-db": "psql -f db/setup.sql",
    "listen": "nodemon express/listen.js",
    "seed-db": "npm run setup-db && knex seed:run",
    "seed:prod": "NODE_ENV=production DB_URL=$(heroku config:get DATABASE_URL) knex seed:run",
    "migrate:latest:prod": "NODE_ENV=production DB_URL=$(heroku config:get DATABASE_URL) knex migrate:latest",
    "migrate:rollback:prod": "NODE_ENV=production DB_URL=$(heroku config:get DATABASE_URL) knex migrate:rollback",
    "start": "node listen.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northcoders/BE2-NC-Knews.git"
  },
  "keywords": [],
  "author": "shread1234",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/northcoders/BE2-NC-Knews/issues"
  },
  "homepage": "https://github.com/northcoders/BE2-NC-Knews#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "heroku": "^7.22.2",
    "knex": "^0.15.2",
    "pg": "^7.8.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.1.4",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10",
    "supertest": "^3.4.2"
  }
}
